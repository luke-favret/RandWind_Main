doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  title Generated String
  link(rel='icon' href='../resources/img/randwind_logo.png' type='image/x-icon')
  // Bootstrap core CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS' crossorigin='anonymous')
  link(href='../resources/css/my_style.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-light(style='background: #D7E6F3;')
  a.navbar-brand(href='/')
    img(src='../resources/img/randwind_logo.png' alt='' width='30%' height='30%')
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarText' aria-controls='navbarText' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarText.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='/') Home
      li.nav-item
        a.nav-link(href='/about')
          | About
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='/saved_strings') My Generations
    - if(!loggedIn)
        ul.navbar-nav.my-2.my-lg-0
          li.nav-item
            a.nav-link(href='/login') Login
          li.nav-item
            a.nav-link(href='/registration') Register
    - else
        .form-inline.my-2.my-lg-0
          form(action='/logout' method='post')
            button.btn.btn-outline-light.my-2.my-sm-0(type='submit') Logout
.container
  br
  br
  .row
    p.lead
      | Below is the randomly generated string for your use. Make sure to save the string somewhere else if you choose not to save it here for later use.
  .row
    - if(randSTR)
        p=randSTR
        - if(loggedIn)
            .form-inline
              form(action='/saveString' method='post')
                button.btn.btn-outline-light.my-2.my-sm-0(type='submit') Save String
        - else
            button.btn.btn-outline-light.my-2.my-sm-0(type='submit' disabled='') Save String
            p| Login to save strings



